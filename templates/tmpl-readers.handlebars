<div> <!--beginning div-->
  <div class = "tab-container"> <!--tab container div-->
    <div class = "dropdown-reader"> <!--dropdown div-->
      <select class="btn btn-default dropdown-toggle" type="button" id="readers-container" size = "10" data-toggle="dropdown" aria-expanded="true" aria-haspopup="true">
        {{#each readers}}
            <option>{{this}}</option>
        {{/each}}
      </select>
    </div> <!--end of dropdown div-->

    <div class="form-container"> <!--form div-->
      <form name="myForm" id="submitForm" >
        <div class="form-group">
          <label class="control-label" for="url">URL</label>
          <input type="text" class="form-control" name="url">
        </div>

        <div class="form-group">
          <label class="control-label" for="reader_id">Reader ID</label>
          <input type="text" class="form-control" name="reader_id">
        </div>

        <div class="form-group">
          <label class="control-label" for="name">Name</label>
          <input type="text" class="form-control" name="name">
        </div>

        <div class="form-group">
          <label class="control-label" for="description">Description</label>
          <input type="text" class="form-control" name="description">
        </div>

        <div class="form-group">
          <label class="control-label" for="user_id">User ID</label>
          <input type="text" class="form-control" name="user_id">
        </div>

        <div class="form-group">
          <div class="sumbit">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

      </form>
    </div> <!--end of form div-->
    <div class = tagTable> <!--table div-->
      <table id="grid-basic" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th data-column-id="tag">Tag</th>
            <th data-column-id="tag-timestamp">Tag Timestamp</th>
          </tr>
        </thead>
        <tbody>
          {{#each results}}
          <tr>
            <td>{{this.tag}}</td>
            <td>{{this.tag_timestamp}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div> <!--end of table div-->
  </div> <!--end of container div-->
</div> <!--ending div-->
