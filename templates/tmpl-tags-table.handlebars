<div id = "grid-container">
  <table id="grid-basic" name="myTable" class="table table-bordered table-striped">
    <thead>
      <tr>
        <th data-column-id="latitude">Latitude</th>
        <th data-column-id="longitude">Longitude</th>
      </tr>
    </thead>
    <tbody id ="locationRow">
      {{#each results}}
      <tr>
        <td>{{this.latitude}}</td>
        <td>{{this.longitude}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modal2" id="#myModal2">
    Edit
  </button>

  <div class="modal fade" id="modal2" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Edit Longitude/Latitude</h4>
        </div>
        <div class="modal-body" id="modal-lat-long">

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary">Save changes</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

</div>
