<form action="{{ url }}" name="myForm" id="submitForm" >

        <div class="form-group">
          <label class="control-label" for="reader_id">Reader ID</label>
          <input type="text" class="form-control" name="reader_id" id="reader_id" value="{{ reader_id }}">
        </div>

        <div class="form-group">
          <label class="control-label" for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="{{ name }}">
        </div>

        <div class="form-group">
          <label class="control-label" for="description">Description</label>
          <input type="text" class="form-control" name="description" id="description" value="{{ description }}">
        </div>

        <div class="form-group">
          <label class="control-label" for="user_id">User ID</label>
          <input type="text" class="form-control" name="user_id" id="user_id" value="{{ user_id }}">
        </div>

        <div class="form-group">
          <div class="sumbit">
            <button type="submit" class="btn btn-primary" id= "submitButton">Submit</button>
          </div>
